
<div class="container-fluid product-container">
  <div class= "row" data-product-id"></div>
  <% @product.id %>
    <% cache @product do %>
      <h2><%= @product.name %></h2>
      <div class="col-md-12 col-sm-12">
        <% unless @product.image_url.blank? %>
          <%= image_tag(@product.image_url, width: "350", class: "img-zoom", data: "zoom_image='#{@product.image_url}'") %>
        <% end %>	
      </div> <!--col-->	
      	
      	
      	
      	
 


<%= form_tag "/payments/create" do %>
<%= render partial: "shared/stripe_checkout_button" %>
<% end %>
</div>
</div>


  <div class="col-xs-12 product-description">
       <strong>Average Customer Rating:</strong>
     <div class="rated" id= "average-rating" data-score="<%= @product.average_rating %>"></div>
   <% end %>
    <strong>Price:</strong><%= number_to_currency(@product.price) %></p>
  	<strong>Description:</strong>
    <p><%= @product.description %></p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </div>



  <div class="col-xs-12, reviews">
    <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
    <%= render partial:'new_comment' %>
    <%= render partial:'comments' %>
    <div class="pagination">
      <%= will_paginate @comments %> 
    </div>



    



     
      <div class="admin-navigation">
        <%= link_to 'Back', products_path, class: "btn btn-primary btn-xs" %>
        <% if current_user && current_user.admin? %>
          <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %>
        <%end %>
      </div> <!-- end admin navigation -->
    </div> <!-- end reviews -->
  </div> <!-- end row -->
</div> <!-- end container -->